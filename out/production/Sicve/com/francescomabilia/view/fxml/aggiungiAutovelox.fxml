<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.francescomabilia.controller.AggiungiAutovelox"
            prefHeight="400.0" prefWidth="600.0">
    <center>
        <GridPane alignment="CENTER">
            <Label text="(*) Tutti i campi sono obbligatori" GridPane.rowIndex="1" GridPane.columnIndex="0"/>

            <Label text="Id Autovelox*" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="idAutoveloxTextField" promptText="Id Autovelox" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Km Autovelox*" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="kmAutoveloxTextField" promptText="Km Autovelox" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        </GridPane>
    </center>

</BorderPane>

